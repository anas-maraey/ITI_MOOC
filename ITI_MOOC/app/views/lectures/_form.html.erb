<div class="jumbotron">
  <%= form_for(@lecture, class: "form-horizontal") do |f| %>
      <% if @lecture.errors.any? %>
          <div id="error_explanation" class="alert alert-danger" role="alert">
            <h2 class="alert"><%= pluralize(@lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

            <ul>
              <% @lecture.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :content , "Lecture Content" %><br>
        <%= f.file_field :content %>
      </div>

      <div class="field form-group">
        <%= f.label :course_id %><br>
        <%= f.collection_select :course_id, Course.all, :id, :title, class: "form-control" %>
      </div>

      <div class="actions form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
  <% end %>

</div>